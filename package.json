{
  "name": "my-finance-app",
  "version": "1.0.0",
  "description": "My Finance App",
  "main": "server/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "postinstall": "npm --prefix client install --legacy-peer-deps && npm --prefix server install",
    "start:dev": "concurrently 'npm run --prefix client start' 'npx nodemon server'",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "start": "NODE_ENV=production node server",
    "db-migrate": "cd server && npx sequelize-cli db:migrate",
    "start-dev-server": "npx nodemon server"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pg-promise": "^10.9.1",
    "sequelize": "^6.4.0",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules",
    "server/node_modules"
  ]
}
